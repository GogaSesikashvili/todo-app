@model Todo.Web.Models.TodoEntryViewModel

@{
    ViewData["Title"] = "ChangeEntryStatus";
}

<h1>Change Entry Status</h1>

<p>
    <a class="bi bi-arrow-left" href="@Url.Action("ViewEntries", new { listId=Model.TodoListId })"> Back</a>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeEntryStatus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden />
            <input asp-for="Title" hidden />
            <input asp-for="Description" hidden />
            <input asp-for="AdditionalNotes" hidden />
            <input asp-for="Label" hidden />
            <input asp-for="DueDate" hidden />
            <input asp-for="Reminder" hidden />
            <input asp-for="CreationDate" hidden />
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<Status>()">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <input asp-for="TodoListId" hidden /><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
