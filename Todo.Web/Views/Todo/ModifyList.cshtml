@model Todo.Web.Models.TodoListViewModel

@{
    ViewData["Title"] = "Modify";
}

<h1>Modify List</h1>

<p>
    <a class="bi bi-arrow-left" asp-action="@ViewBag.ViewLists"> Back</a>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModifyList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Hide" class="control-label"></label>
                @Html.CheckBoxFor(model => model.Hide)
                <span asp-validation-for="Hide" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}